<h1>Listing Rentals</h1>

<% @rentals.each do |rental| %>

	<div><p><%= rental.title %></br>
			<%= rental.description %><br />
			<%= image_tag rental.image_url(:thumb).to_s %><br />
			<%= rental.price_per_day %><br />
			<%= rental.price_per_week %><br /></p>
			<%= link_to "Show", rental_item_path(rental) %>
	</div>

<% end %>