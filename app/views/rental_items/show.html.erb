<p><%= @rentalitem.title %></p>
<p>Description: <%= @rentalitem.description %></p>
<%= image_tag @rentalitem.image_url(:thumb).to_s %><br />
<p>$<%= @rentalitem.price_per_day %> per day</p>
<p>$<%= @rentalitem.price_per_week %> per week</p>
<p><%#= @rentalitem.tags.find(2).name %></p>

<% if @rentalitem.location %>
<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@rentalitem.location.latitude}%2C#{@rentalitem.location.longitude}" %>
<% end %><br/>

<div id = "tags"class= "reveal-modal">
	<h2 class = "subclass">Add Tags</h2>
	<%= form_for @rentalitem do |d| %>

		<%= d.fields_for :tags, @rentalitem.tags.build do |f| %>
			<div class = "field">
				<%= f.label :name %>
				<%= f.text_field :name %>
			</div>
		<% end %>

	<div class = "actions"><%= d.submit value = "Publish Item" %></div>
	<% end %>
</div>
<a href= "#" data-reveal-id="tags">tags</a><br/>

<%= link_to "Make rental", "#", :id => 'rental_button' %>
	<%= render 'bookings' %>
